#header{
    width: 100%;
    height: 260px;
    /*background: lightskyblue;*/
    color: #ffffff;
}
#header .content{
    padding-top: 60px;
    text-align: center;
}
#header .content image{
    width: 100px;
    height: 100px;
    border-radius: 50%;
}
#header .content .nickName{
    padding: 20px;
}
#header .content .orther{
    padding-top: 10px;
    font-size: 15px;
}
#section .flex-wrap{
    display: flex;
    flex-direction:row;
    text-align: center;
    background: #fff;
    padding: 30rpx;
    opacity: 0.8;

}
#section .flex-item{
    flex: 1;
}
#section .icon{
    width: 23px;
    height: 23px;
}
#section .menu_title{
    display: block;
}
#section .menu_title text{
    font-size: 13px;
}
/*竖向标题*/
#menus{
    background: #ffffff;
    margin-top:10px;
    height: auto;
    width: 100%;
    opacity: 0.7;
}
#menus .content{
    height: 45px;
    border-bottom: 0.5px solid #ebebeb;
}
#menus .content .view{
    float: left;
}
#menus .content .view .text{
    font-size: 15px;
    line-height: 45px;
    padding-left: 20px;
}
#menus .content .right{
    height: 45px;
    line-height: 45px;
    float: right;
    margin-right: 10px;
}