/*index.wxss*/
/*设置轮播图样式*/
.swiper_box{
  width: 100%;
  height: 150px;
}
/*设置图片的样式*/
.swiper_box image{
  width: 100%;
  height: 150px;
}
/*正在上映的样式*/
.text{
  /*弹性布局*/
  display: flex;
  width: 100%;
  padding: 10px;
  color: #656565;
  background-color: #ddd;
}
.line_flag{
  width: 3px;
  height: 18px;
  background-color: #09bb07;
  margin-left: 10px;
}
.text text{
  margin-left: 10px;
  line-height: 18px;
}
/*电影信息的样式*/
.item{
  padding: 10px;
  width: 100%;
  border-top: 1px solid #eaeaea;
  display: flex;
  flex-direction: row;
}
.item_left{
  width:20%
}
.item_left image{
  width: 60px;
  height: 95px;
  margin-left: 10px;
}
/*中间部分*/
.item_middle{
  margin-left: 15px;
  width: 60%;
  height: 95px;
}
/*中间字体部分*/
.item_middle .title{
  font-size: 16px;
  color: #333;
}
.item_middle .subTitle{
  font-size: 12px;
  color: #666;
  margin: 2px 0px;
}
.item_middle .actor{
  font-size: 12px;
  color: #666;
  margin: 2px 0px;
}
/*右边部分*/
.item_right{
  position: relative;
  width: 20%;
}
.item_right .score{
  font-size: 14px;
  color: #cf616a;
  position: absolute;
  top:0px;
  right: 10px;
}
.item_right .action{
  border: 1px solid #29cc6d;
  border-radius: 2px;
  color: #29cc6d;
  padding: 2px 4px;
  font-size: 12px;
  line-height: 16px;
  text-align: center;
  position: absolute;
  bottom: 10px;
  right: 10px;
}