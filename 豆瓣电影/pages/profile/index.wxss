.background {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: -1000;
  opacity: 0.1;
}

#header {
  width: 100%;
  height: 260px;
  /*background: lightskyblue;*/
  color: #fff;
}

#header .content {
  padding-top: 60px;
  text-align: center;
}

#header .content image {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}

#header .content .nickName {
  padding-top: 20px;
}

#header .content .orther {
  padding-top: 10px;
  font-size: 15px;
}

/*横向标题*/

#section .flex-wrap {
  display: flex;
  flex-direction: row;
  text-align: center;
  background: #fff;
  opacity: 0.8;
  padding: 30rpx;
}

#section .flex-item {
  flex: 1;
}

#section .flex-item .icon {
  width: 23px;
  height: 23px;
}

#section .flex-item .menu_titile {
  display: block;
}

#section .flex-item .menu_titile text {
  font-size: 13px;
}

/*竖向标题*/

#menus {
  background: #fff;
  margin-top: 10px;
  height: auto;
   opacity: 0.7;
  width: 100%;
}

#menus .content {
  height: 45px;
  border-bottom: 0.5px solid #ebebeb;
}

#menus .content .view {
  float: left;
}

/*    line-height: 45px; 放到高度的中间*/

#menus .content .view text {
  font-size: 15px;
  line-height: 45px;
  padding-left: 20px;
}

#menus .content  .right {
  height: 45px;
  line-height: 45px;
  float: right;
  margin-right: 10px;
}
