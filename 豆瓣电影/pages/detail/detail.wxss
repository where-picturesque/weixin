.meta{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 50rpx 40rpx;
}
.meta .poster{
width: 100%;
height: 800rpx;
margin: 20rpx;
}
.title{
    font-style: 42rpx;
    color: #444;
}
.info{
    font-size: 24rpx;
    color: #888;
    margin-top: 20rpx;
    width: 80%;

}
.summary{
    width: 80%;
    margin: 30rpx auto;
}
.summary .label{
    /*block块元素 display: 可注释*/
    /*display: block;*/
    font-size: 30rpx;
    margin-bottom: 30rpx;
}
.summary .content{
    color: #666;
    font-size: 22rpx;
}
.background{
    position: fixed;
    left: 0px;
    top: 0px;
    right: 0px;
    bottom: 0px;
    height: 100%;
    width: 100%;
    z-index: -1000;
    opacity: 0.1;

}