/*请求头样式*/
.container{
     /* background: url(../../images/fire.jpg); */
    background: rgba(245,245,245,0.3);
}
.header{
    display: flex;
    justify-content: center;
    border-bottom: 1px solid #ccc;
    margin-bottom: 40rpx;
    height: 80rpx;
    
}
.header .search{
    width: 100%;
    height: 60rpx;
    padding: 20rpx 40rpx;
    color: black;
    font-size: 38rpx;
    text-align: center;
}
.list{
    height: 100%;
    position: absolute;
    top: 80rpx;
}
.list .item{
    display: flex;
    padding: 40rpx;
    border-bottom: 1px solid #eee;
    cursor: pointer;
}
/*设置电影样式*/
.list .item .poster{
    width: 128rpx;
    height: 168rpx;
    margin-right: 20rpx;
}
/*中间部分*/
.list .item  .meta{
    flex: 1;
}
.list .item .meta .title,
.list .item .meta .sub-title,
.list .item .meta .artists{
    display: block;
    margin-bottom: 15rpx;

}
.list .item .meta .title{
    font-size: 32rpx;

}
.list .item .meta .sub-title {
    font-size: 22rpx;
    color: #c0c0c0;
}
.list .item .meta .artists{
    font-size: 24rpx;
    color: #999;
}
.list .item .rating text{
    display: inline-block;
    width: 40rpx;
    font-size: 28rpx;
    font-weight: bold;
    text-align: center;
    background-color: rgba(247, 76, 79, 0.8);
    color: #fff;
    padding: 10rpx;
    border-radius: 20rpx;
}
